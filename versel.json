{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server.js"
      }
    ],
    "env": {
      "PORT": "3000",
      "MONGO_URI": "mongodb://127.0.0.1:27017/yourDatabaseName",
      "API_BASE_URL": "http://localhost:3000"
    }
  }
  